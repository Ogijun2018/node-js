<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Ajax</title>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script>
        $(function () {
            $('#btn').click(function(){
                console.log('pressed');
                $.ajax({
                    type:"POST",
                    url:'/ajax',
                    dataType: 'json',
                    success: function(data){
                        $('#msg').html(data.msg);
                    },
                    error: function(){
                        console.log('error');
                    }
                });
            });
        });
        </script>
    </head>
    <body>
    <form>
     <div id='msg'></div>
     <button id='btn' type="button">Send</button>
     </form>
    </body>
</html>